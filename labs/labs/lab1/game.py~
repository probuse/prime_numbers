class Room(object):
    
    def __init__(self, name, description):
        self.name = name
        self.description = description
        self.paths = {}
        self.light = True
        
    def go(self, direction):
        return self.paths.get(direction, None)
    
    def add_paths(self, paths):
        self.paths.update(paths)
        
    def switch_light(self, switch):
        if switch == '1':
            return self.light
        elif switch == '0':
            self.light = False
            return self.light
        else:
            raise TypeError('Invalid input, 0 or 1 is required for off and on')
